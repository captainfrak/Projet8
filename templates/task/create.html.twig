{% extends 'base.html.twig' %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10 col-md-10 col-sm-10 col-10 mt-3 text-center">
            <div class="card" style="width: 100%">
                <div class="card-body">
                    {{ form_start(form, {'action' : path('task_create')}) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-success pull-right">Ajouter</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-12 mt-3 text-center">
            <a href="{{ path('task_list') }}" class="btn btn-primary mt-3">Retour à la liste des tâches</a>
        </div>
    </div>
{% endblock %}
